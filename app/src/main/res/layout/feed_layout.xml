<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.github.siyamed.shapeimageview.OctogonImageView
        android:id="@+id/feedPostProfileImageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/searchicon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:siBorderColor="#8BC34A"
        app:siBorderWidth="3dp" />

    <com.github.siyamed.shapeimageview.OctogonImageView
        android:id="@+id/likeNegativePostProfileImageView"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_hearth"
        app:layout_constraintEnd_toEndOf="@+id/feedPostImageView"
        app:layout_constraintTop_toBottomOf="@+id/feedPostCommentTextView"
        app:siBorderColor="#D81B60"
        app:siBorderWidth="2dp" />

    <com.github.siyamed.shapeimageview.OctogonImageView
        android:id="@+id/likePositivePostProfileImageView"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_hearth"
        app:layout_constraintEnd_toEndOf="@+id/feedPostImageView"
        app:layout_constraintTop_toBottomOf="@+id/feedPostCommentTextView"
        app:siBorderColor="#8BC34A"
        app:siBorderWidth="2dp" />



    <com.github.siyamed.shapeimageview.OctogonImageView
        android:id="@+id/advisePostProfileImageView"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="15dp"
        android:src="@drawable/advise_ic"
        app:layout_constraintEnd_toStartOf="@+id/likePositivePostProfileImageView"
        app:layout_constraintTop_toTopOf="@+id/likePositivePostProfileImageView"
        app:siBorderColor="#8BC34A"
        app:siBorderWidth="2dp" />

    <TextView
        android:id="@+id/feedPostUsernameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/feedPostProfileImageView" />

    <com.github.siyamed.shapeimageview.OctogonImageView
        android:id="@+id/feedPostImageView"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/searchicon"
        app:layout_constraintStart_toStartOf="parent"
        app:siBorderColor="#8BC34A"
        app:siBorderWidth="5dp"
        app:layout_constraintTop_toBottomOf="@+id/feedPostUsernameTextView" />

    <TextView
        android:id="@+id/feedPostCommentTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="50dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/feedPostImageView" />

    <TextView
        android:id="@+id/profileLikeNumberTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        app:layout_constraintEnd_toEndOf="@+id/likePositivePostProfileImageView"
        app:layout_constraintStart_toStartOf="@+id/likePositivePostProfileImageView"
        app:layout_constraintTop_toBottomOf="@+id/likePositivePostProfileImageView" />

</androidx.constraintlayout.widget.ConstraintLayout>