<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.github.siyamed.shapeimageview.OctogonImageView
        android:id="@+id/commentProfileImageViewLayout"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/searchicon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:siBorderColor="#8BC34A"
        app:siBorderWidth="3dp" />

    <TextView
        android:id="@+id/usernameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/commentProfileImageViewLayout"
        app:layout_constraintStart_toStartOf="@+id/commentProfileImageViewLayout"
        app:layout_constraintTop_toBottomOf="@+id/commentProfileImageViewLayout" />

    <TextView
        android:id="@+id/commentTextView"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:background="@drawable/background_left"
        android:padding="5dp"
        android:textColor="#fff"
        android:text="#fff"
        app:layout_constraintBottom_toBottomOf="@+id/commentProfileImageViewLayout"
        app:layout_constraintStart_toEndOf="@+id/commentProfileImageViewLayout"
        app:layout_constraintTop_toTopOf="@+id/commentProfileImageViewLayout" />


</androidx.constraintlayout.widget.ConstraintLayout>